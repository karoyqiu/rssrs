{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "rssrs",
    "version": "../package.json"
  },
  "tauri": {
    "allowlist": {
      "shell": {
        "open": true
      },
      "window": {
        "maximize": true,
        "show": true
      }
    },
    "windows": [
      {
        "title": "RSS",
        "width": 1200,
        "height": 700,
        "center": true,
        "visible": false
      }
    ],
    "security": {
      "csp": {
        "default-src": ["'self'"],
        "img-src": ["'self'", "https:"],
        "style-src": ["'self'", "'nonce-rWvh_Hd30vNJfto7tl9ve'"]
      }
    },
    "systemTray": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": true,
      "title": "RSS"
    },
    "bundle": {
      "active": false,
      "targets": "all",
      "identifier": "com.gmail.karoyqiu.rssrs",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
